<Window x:Class="DrawMuse.CanvasSizeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DrawMuse"
        mc:Ignorable="d"
        Title="CanvasSizeWindow" Height="250" Width="300">
        
    <Grid>
        <Border BorderBrush="Black" BorderThickness="1" CornerRadius="10" Padding="10" Margin="1"/>
        <StackPanel>
            
            <Label Content="Width" Margin="50,20,0,0" Foreground="Black" Opacity="1" FontSize="15"/>
            <TextBox Name="WidthTextBox" Width="200" Margin="0,5,0,10"/>
            <Label Content="Height" Margin="50,0,0,0" Foreground="Black" Opacity="1" FontSize="15"/>
            <TextBox Name="HeightTextBox"  Width="200" Margin="0,5,0,10"/>
            
            <Button Content="Ok" 
                    Width="75"
                    Height="24"
                    Foreground="Black"
                    FontSize="15"
                    HorizontalAlignment="Center"
                    Click="OK_Click"/>
            
        </StackPanel>
    </Grid>
</Window>
