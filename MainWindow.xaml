<Window x:Class="DrawMuse.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DrawMuse"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1920">
    <Window.Resources>
        <SolidColorBrush x:Key="upperBarColor" Color="#523131" Opacity="0.26"/>
        <SolidColorBrush x:Key="sideBarColor" Color="#523131" Opacity="0.35" />
    </Window.Resources>
    <Grid>
        <Rectangle Width="100" HorizontalAlignment="Left" Fill="{StaticResource sideBarColor}" Margin="0,99,0,0" />
        <Rectangle Width="1920" Height="100" VerticalAlignment="Top" Fill="{StaticResource upperBarColor}"/>
        <Image Source="Icons/paint-brush.png" Width="32" Height="32" Margin="0,0,1820,960"/>
        <Image Source="Icons/palette.png" Width="32" Height="32" Margin="0,0,1620,960" />
        <Image Source="Icons/fill.png" Width="32" Height="32" Margin="0,0,1520,960"/>
        <Image Source="Icons/eye-dropper.png" Width="32" Height="32" Margin="0,0,1420,960"/>
        <Image Source="Icons/eraser.png" Width="32" Height="32" Margin="0,0,1720,960" />
        <Image Source="Icons/slash.png" Width="32" Height="32" Margin="0,0,1320,960"/>
    </Grid>
</Window>
